<%/* This is used to deliver a static ad for the multi-touch attribution use-case. */%>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport"
        content="width=device-width, initial-scale=1.0" />
  <title><%= TITLE %></title>
  <link rel="icon"
        href="" />
  <link rel="stylesheet"
        href="/css/ad-frame.css" />
  <link rel="stylesheet"
        href="/css/ad-label.css" />
  <% if (ENABLE_WRITE_IMPRESSION) { %>
    <script src="/js/dsp/usecase/multi-touch-attribution/write-impression-context-to-shared-storage.js"
            data-campaign-id="<%= CAMPAIGN_ID %>"
            data-publisher-id="<%= PUBLISHER_ID %>"
    ></script>
  <% } %>
</head>

<body>
  <p id="ad-label"></p>
  <a width="<%= WIDTH %>"
     height="<%= HEIGHT %>"
     target="_blank"
     rel="noopener noreferrer"
     href="<%= DESTINATION %>">
    <!-- Smaller to avoid scrollbar -->
    <img width="<%= WIDTH * 0.98 %>"
         height="<%= HEIGHT * 0.98 %>"
         loading="lazy"
         src="<%= CREATIVE %>">
  </a>
</body>
</html>